#!/bin/sh

set -e

if test "`id -u`" != 0; then
  if which sudo 2>/dev/null 1>&2; then
    echo "This needs to be run as root, trying sudo" 1>&2
    exec sudo "$0" "$@"
  else
    echo "This needs to be run as root" 1>&2
    exit 2
  fi
fi

apt-get install \
  zsh gitk curl \
  libvte9 \
  firefox-esr \
  xinit xauth openbox xscreensaver \
  xfonts-terminus \
  zip unzip
