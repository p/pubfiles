	rh = reset --hard HEAD
	rhhp = reset --hard HEAD^

	dif = diff
	grpe = grep
	ts = status
	cpx = cherry-pick -X ours
	gerp = grep
	rc = rebase --continue
	aa = add -A
	rbs = rebase --skip
	pp = push p -u
	g = grep
	mnf = merge --no-ff
	gi = g -i
	puu = push u -u

