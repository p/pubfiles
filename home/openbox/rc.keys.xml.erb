  <keybind key="A-F12">
    <action name="Execute"><command>xmmsctrl next</command></action>
  </keybind>
  <keybind key="A-F11">
    <action name="Execute"><command>xmmsctrl prev</command></action>
  </keybind>
  <keybind key="F12">
    <action name="Execute"><command>sh -c '
      if xmmsctrl playing; then
        xmmsctrl time +15
      else
        xmmsctrl play
      fi
    '</command></action>
  </keybind>
  <!-- F11 is taken by fullscreen in fx/scite -->
  <keybind key="S-F11">
    <action name="Execute"><command>xmmsctrl time -15</command></action>
  </keybind>
