  <keybind key="A-F12">
    <action name="Execute"><command>
      sh -c '<%= mpc %> next &amp;&amp; <%= mpc %> play'
    </command></action>
  </keybind>
  <keybind key="A-F11">
    <action name="Execute"><command><%= mpc %> prev</command></action>
  </keybind>
  <keybind key="C-F12">
    <action name="Execute"><command>
      sh -c '<%= mpc %> seek +15 &amp;&amp; <%= mpc %> play'
    </command></action>
  </keybind>
  <keybind key="C-F11">
    <action name="Execute"><command><%= mpc %> seek -15</command></action>
  </keybind>
  <keybind key="C-S-F12">
    <action name="Execute"><command>
      sh -c '<%= mpc %> seek +30 &amp;&amp; <%= mpc %> play'
    </command></action>
  </keybind>
  <keybind key="C-S-F11">
    <action name="Execute"><command>
      sh -c '<%= mpc %> next &amp;&amp; <%= mpc %> seek +10'
    </command></action>
  </keybind>
  <keybind key="F12">
    <action name="Execute"><command>sh -c '
      if test "`<%= mpc %> status %state%`" = playing; then
        <%= mpc %> seek +15
      else
        <%= mpc %> play
      fi
    '</command></action>
  </keybind>
  <!-- F11 is taken by fullscreen in fx/scite -->
  <keybind key="F11">
    <action name="Execute"><command>xmmsctrl time -15</command></action>
  </keybind>
