have() {
  which "$@" >/dev/null 2>&1
}

if test -n "$DISPLAY"; then
  if have gitk; then
    ga() { (if test -n "$1"; then cd "$1"; fi && gitk --all) & }
  fi
fi

gcou() { git checkout -b "$1" --track upstream/"$1" }
gcop() { git checkout -b "$1" --track p/"$1" }

gr() {
  git reset "$@" && git checkout "$@"
}
